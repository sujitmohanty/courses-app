<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>
  <style>
    body {
      font-family: sans-serif;
      padding: 20px;
    }

    .course-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border: 1px solid #ccc;
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 5px;
    }

    .course-item h3 {
      margin: 0;
      flex-grow: 1;
    }

    .course-actions {
      display: flex;
      gap: 10px;
    }

    .action-btn {
      text-decoration: none;
      color: white;
      padding: 8px 12px;
      border-radius: 4px;
      border: none;
      font-size: 14px;
      cursor: pointer;
    }

    .details-btn {
      background-color: #007bff;
    }

    .edit-btn {
      background-color: #ffc107;
    }

    .delete-btn {
      background-color: #dc3545;
    }
  </style>
</head>
<body>
  <h1>My Courses</h1>
  <a href="/dashboard">Back to Dashboard</a>
  <hr>
  <% if (courses.length> 0) { %>
    <% courses.forEach(course=> { %>
      <div class="course-item">
        <h3>
          <%= course.title %>
        </h3>
        <div class="course-actions">
          <a href="/courses/<%= course.id %>/details" class="action-btn details-btn">Details</a>
          <a href="/courses/<%= course.id %>/edit" class="action-btn edit-btn">Edit</a>
          <form action="/courses/<%= course.id %>/delete" method="POST"
            onsubmit="return confirm('Are you sure you want to delete this course? This cannot be undone.');">
            <button type="submit" class="action-btn delete-btn">Delete</button>
          </form>
        </div>
      </div>
      <% }); %>
        <% } else { %>
          <p>You have not created any courses yet.</p>
          <a href="/courses/create">Create your first course</a>
          <% } %>
</body>
</html>